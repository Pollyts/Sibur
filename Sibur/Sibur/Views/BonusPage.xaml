<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" BackgroundColor="#008993"
             x:Class="Sibur.Views.BonusPage">
    <ContentPage.Resources>
        <StyleSheet Source="/mainstylesheet.css" />
    </ContentPage.Resources>
    <ContentPage.Content>        
        <StackLayout>            
            <Image IsAnimationPlaying="True" Source="bonus.png" HorizontalOptions="Center"/>
            <Label Margin="0,10" Text="Ура!" FontSize="Title" HorizontalOptions="Center" TextColor="White" />
            <Label FontSize="Title" HorizontalOptions="Center" TextColor="White" Text="{Binding NumberOfDays, StringFormat='Добавлена награда за {0} день!'}" />
            <Label Text="Заходите в приложение каждый день, чтобы получать бонус!" FontSize="Medium" HorizontalTextAlignment="Center" Margin="20" TextColor="White" />
            <Button Text="OK" Clicked="Button_Clicked" HorizontalOptions="Center" BackgroundColor="White" TextColor="#008993" CornerRadius="24"/>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>