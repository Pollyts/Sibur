<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sibur.Views.CurrentActivity">
    <ContentPage.Resources>
        <StyleSheet Source="/mainstylesheet.css" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <ImageButton  Command="{Binding GoBackCommand}" HorizontalOptions="EndAndExpand" BackgroundColor="Transparent" Source="cancelblack.png"/>
                <Label Margin="5" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" Text="{Binding CurrentActivity.Name, Mode=OneWayToSource}" FontAttributes="Bold" TextColor="Black" FontSize="24"/>
                <Button Command="{Binding CreateActivityCommand}" Text="Записаться" BackgroundColor="#84CB35" FontSize="18" TextColor="#FFFFFF" CornerRadius="24" Margin="31,30,30,0" VerticalOptions="Fill" HorizontalOptions="End" />
                <Label Text="Описание:" Margin="54,10,0,10" FontSize="16" TextColor="#008993"/>
                <Label Text="{Binding CurrentActivity.Description, Mode=OneWayToSource}" Margin="54,10,0,10" FontSize="16" TextColor="Black"/>
                <!--<Label Text="Категории:" Margin="54,10,0,10" FontSize="16" TextColor="#008993"/>
                <Label Text="{Binding Categories, Mode=OneWayToSource}" Margin="54,10,0,10" FontSize="16" TextColor="Black"/>-->
                <Label Text="Дата начала:" Margin="54,10,0,10" FontSize="16" TextColor="#008993"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding CurrentActivity.startD, Mode=OneWayToSource}" Margin="54,10,0,10" FontSize="16" TextColor="Black"/>
                </StackLayout>
                <Label Text="Дата окончания:" Margin="54,10,0,10" FontSize="16" TextColor="#008993"/>
                <StackLayout Orientation="Horizontal">
                    <Label Text="{Binding CurrentActivity.endD, Mode=OneWayToSource}" Margin="54,10,0,10" FontSize="16" TextColor="Black"/>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>