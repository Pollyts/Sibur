<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sibur.Views.Activities">
    <ContentPage.Content>
        <StackLayout>
                <Image Source="sibur_minilogo.png" HorizontalOptions="Center" Margin="0,20,0,20" />
                <RelativeLayout>
                <ImageButton  Command="{Binding CreateActivityCommand}" RelativeLayout.XConstraint = "{ConstraintExpression Type=RelativeToView, ElementName=lbl,
             Property=X, Factor=0.5, Constant=-10}" 
               x:Name="image" BackgroundColor="Transparent" Source="Pluse.png"/>
                <Label x:Name="lbl" Text="МЕРОПРИЯТИЯ" VerticalOptions="Center" FontSize="24" HorizontalOptions="CenterAndExpand" RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1.0}"/>
                </RelativeLayout>              
                    <Frame BackgroundColor="White" CornerRadius="20" Margin="10" HasShadow="False" Padding="10">
                            <ListView  ItemsSource="{Binding activities}" HasUnevenRows="true" VerticalScrollBarVisibility="Never">
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <ViewCell>
                                            <ViewCell.View>
                                                <StackLayout>
                                                    <Label Text="{Binding name}" FontSize="Medium" />
                                                    <Label Text="{Binding desc}" FontSize="Small" />
                                                    <StackLayout Orientation="Horizontal">
                                                        <Label Text="{Binding startD}" FontSize="Small" />
                                                        <Label Text=" - "/>
                                                        <Label Text="{Binding endD}" FontSize="Small" />
                                                    </StackLayout>
                                                    <Label Text="Подробнее" FontSize="Small" />                                           
                                                </StackLayout>
                                            </ViewCell.View>
                                        </ViewCell>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>                                    
                    </Frame>
            </StackLayout>
    </ContentPage.Content>
</ContentPage>